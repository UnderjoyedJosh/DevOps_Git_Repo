pipeline {
    agent {
        docker { image 'python:latest'}
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'python -m pip install -r requirements.txt'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'python tests.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
