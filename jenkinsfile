pipeline {
    agent {
        label 'docker'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Test') {
            agent {
                docker { 
                    label 'docker'
                    image 'python:latest'
                }
                sh 'python -m pip install -r requirements.txt'
            }
            steps {
                echo 'Testing..'
                sh 'python tests.py'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}
